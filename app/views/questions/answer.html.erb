
<div class="user_answer"><%= @answer %>
  <p><em>You</em></p>
</div>
<div class="coach_answer" style="background-color: #FFFFE1">
  <% if @answer == "I am going to work" %>
  <% return "Great" %>
  <% elsif @answer.last == "?" %>
  <%= "Silly question, get dressed and go to work!" %>
  <% else %>
  <%= "I don't care, get dressed and go to work!" %>
  <% end %>
  <p><em>Coach</em></p>
</div>

<%= link_to "Ask une autre question", ask_path%>
